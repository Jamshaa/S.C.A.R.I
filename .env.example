# S.C.A.R.I Environment Configuration
# Copy this file to .env and customize for your environment

# ==================== APPLICATION SETTINGS ====================
ENV=production
LOG_LEVEL=info
DEBUG=false

# ==================== BACKEND SETTINGS ====================
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Backend API Configuration
API_TITLE=S.C.A.R.I
API_VERSION=2.0
API_DESCRIPTION=Datacenter Thermal Management & Sustainability Intelligence

# ==================== FRONTEND SETTINGS ====================
FRONTEND_PORT=5173
VITE_API_BASE=http://localhost:8000
NODE_ENV=production

# ==================== THERMAL CONFIGURATION ====================
# Physics constraints
MAX_TEMP=60.0
AMBIENT_TEMP=25.0
MIN_TEMP=20.0

# Cooling parameters
MAX_FAN_POWER=550.0
MAX_PUMP_POWER=100.0

# ==================== TRAINING SETTINGS ====================
# Training parameters
TRAINING_TIMESTEPS=600000
LEARNING_RATE=0.0002
TRAINING_STEPS=2048
BATCH_SIZE=128

# Model paths
MODEL_SAVE_DIR=./outputs/models
DATA_DIR=./data
CONFIG_FILE=configs/optimized.yaml

# ==================== DATABASE / STORAGE ====================
# Optional: Connection strings for metrics storage
# DATABASE_URL=postgresql://user:password@localhost/scari
# REDIS_URL=redis://localhost:6379

# ==================== NGINX SETTINGS (Production) ====================
NGINX_PORT=80
NGINX_SSL_PORT=443
ENABLE_SSL=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ==================== MONITORING & LOGGING ====================
# Optional: Monitoring service endpoints
# PROMETHEUS_ENABLED=true
# PROMETHEUS_PORT=9090
# GRAFANA_ENABLED=true
# GRAFANA_PORT=3000

# Log output
LOG_FORMAT=json
LOG_FILE=./outputs/logs/scari.log
LOG_MAX_SIZE=100M
LOG_BACKUP_COUNT=10

# ==================== SECURITY ====================
# CORS settings
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true

# API Key (if using authentication)
# API_KEY=your_api_key_here
# SECRET_KEY=your_secret_key_here

# ==================== PERFORMANCE ====================
# Optimization settings
MAX_WORKERS=4
WORKER_TIMEOUT=120
QUEUE_MAX_SIZE=1000

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=3600

# ==================== NOTIFICATION SETTINGS ====================
# Optional: Alert settings for thermal violations
# ALERT_EMAIL=admin@example.com
# ALERT_SLACK_WEBHOOK=https://hooks.slack.com/...
# THERMAL_ALERT_THRESHOLD=60.0
